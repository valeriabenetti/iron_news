<div class="page-header">
  <%= link_to new_story_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Story
  <% end %>
  <h1 Listing>Stories</h1>
</div>

<div class="panel panel-default">
  <table class="table-responsive table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody class="table-body">
      <%- @stories.each do |story, index| %>
      <tr>
        <td colspan="5"><a href="<%= story.url %>"><%= story.title %></a></td>
        <td>Posted at <%= story.created_at %></td>
        <td><%= story.email %></td>
        <td>
          <%= link_to story do %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_story_path(story) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to story, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
